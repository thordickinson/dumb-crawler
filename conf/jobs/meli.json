{
  "seeds": [
    "https://motos.mercadolibre.com.co/"
  ],
  "idExtractorPattern": "\/(?<id>MCO-[0-9]{6,})",
  "threadCount": 15,
  "tagger": {
    "internal": "matches(host, '(.*).mercadolibre.com.co')",
    "item": "matches(path, '^\/(MCO|mco)-[0-9]+.*')",
    "listing": "matches(host, '(moto|vehiculo)s?\\.mercadolibre\\.com\\.co') and not isResource(path)"
  },
  "linkFilter": {
    "internal":  true
  },
  "priorities": {
    "seed": 1000,
    "item": 500,
    "listing": 100,
    "other": 10
  },
  "renderer": {
    "proxify": ["all"]
  },
  "storage": {
    "includeTags": ["item"]
  },
  "taskKiller": {
    "timeout": "20m"
  },
  "contentValidator" : {
    "disabled": false,
    "includedTags": ["items"],
    "validIf": "containsElement(document, 'div.ui-pdp-specs')"
  }
}